package ExamenNetwork2425;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.io.OutputStreamWriter;
import java.net.Socket;

public class GestorCliente implements Runnable{
	
	BufferedReader brCliente;
	BufferedWriter bwCliente;
	int idCliente;
	Socket s;
	
	public GestorCliente(Socket s) {
		this.s = s;
		this.idCliente = s.getPort();
		
		InputStream is;
		OutputStream os;
		try {
			is = s.getInputStream();
			os = s.getOutputStream();
			
			this.brCliente = new BufferedReader(new InputStreamReader(is));
			this.bwCliente = new BufferedWriter(new OutputStreamWriter(os));
			
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

	@Override
	public void run() {
		
		System.out.println(idCliente);
		
		String mensaje = "Bienvenido Cliente " + idCliente + "\nElige una opción:\n1. Añadir tarea\n2. Completar tarea\n3. Mostrar tareas";
		try {
			bwCliente.write(mensaje);
			bwCliente.newLine();
			bwCliente.flush();
			
			
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		System.out.println(s.getPort());
	}

}
