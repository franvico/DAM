<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="339dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="IES ROSA CHACEL"
        android:textAlignment="center"
        android:textColor="#E42F2F"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="C/ de Abizanda, 70 Madrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="346dp"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        android:text="Visita de profesoras del instituto Fos Nord de Munich Por tic.ies.rosachacel.madrid en Novedades El viernes 1 de Marzo recibimos la visita de varias profesoras de la Escuela Profesional Fos Nord de Munich, en el marco de una gira organizada por la Red Xarxa FP (https://www.xarxafp.org/) por institutos de Formación Profesional de Madrid. Las profesoras fueron acompañadas por Deina Fortes y María Jesús Cervero, coordinadoras de movilidad de los Ayuntamientos de Madrid y Munich respectivamente."
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/buttonSiguiente"
        android:layout_width="129dp"
        android:layout_height="45dp"
        android:layout_marginEnd="32dp"
        android:background="#FFFFFF"
        android:backgroundTint="#B15E5E"
        android:lineSpacingExtra="8sp"
        android:text="SIGUIENTE"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:iconTint="#D53434"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/buttonAnterior" />

    <Button
        android:id="@+id/buttonAnterior"
        android:layout_width="137dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="#A24949"
        android:backgroundTint="#B15E5E"
        android:lineSpacingExtra="8sp"
        android:text="ANTERIOR"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:iconTint="#D53434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="205dp"
        android:layout_height="200dp"
        android:src="@drawable/logorosachacel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="205dp"
        android:layout_height="200dp"
        android:src="@drawable/logomoodle"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="410dp" />
</androidx.constraintlayout.widget.ConstraintLayout>