<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="4"
    android:rowCount="4">

    <TextView
        android:id="@+id/numero_7"
        android:layout_row="0"
        android:layout_column="0"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="7" />

    <TextView
        android:id="@+id/numero_8"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_row="0"
        android:layout_column="1"
        android:text="8" />

    <TextView
        android:id="@+id/numero_9"
        android:layout_row="0"
        android:layout_column="2"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="9" />
    <TextView
        android:id="@+id/div"
        android:layout_row="0"
        android:layout_column="3"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:text=" /" />

    <TextView
        android:id="@+id/numero_4"
        android:layout_row="1"
        android:layout_column="0"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="4" />
    <TextView
        android:id="@+id/numero_5"
        android:layout_row="1"
        android:layout_column="1"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="5" />
    <TextView
        android:id="@+id/numero_6"
        android:layout_row="1"
        android:layout_column="2"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="6" />

    <TextView
        android:id="@+id/mult"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_row="1"
        android:layout_column="3"
        android:text="x" />

    <TextView
        android:id="@+id/numero_1"
        android:layout_row="2"
        android:layout_column="0"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="1" />
    <TextView
        android:id="@+id/numero_2"
        android:layout_row="2"
        android:layout_column="1"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="2" />
    <TextView
        android:id="@+id/numero_3"
        android:layout_row="2"
        android:layout_column="2"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="3" />
    <TextView
        android:id="@+id/menos"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_row="2"
        android:layout_column="3"
        android:text=" -" />

    <TextView
        android:id="@+id/punto"
        android:layout_row="3"
        android:layout_column="0"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text=" ." />
    <TextView
        android:id="@+id/numero_0"
        android:layout_row="3"
        android:layout_column="1"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="0" />
    <TextView
        android:id="@+id/igual"
        android:layout_row="3"
        android:layout_column="2"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="=" />
    <TextView
        android:id="@+id/mas"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_row="3"
        android:layout_column="3"
        android:text="+" />

</GridLayout>