<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tituloMusicosFragmentRegistro"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="@string/musicos_registro_titulo"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/inputDNI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DNI"
                android:inputType="number" />

            <EditText
                android:id="@+id/inputNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/musicos_registro_input_nombre" />

            <EditText
                android:id="@+id/inputApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/musicos_registro_input_apellido" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/musicos_registro_spinner_bandas"
                android:textSize="20sp"
                android:paddingLeft="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerBandas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/botonRegistrarMusico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/musicos_registro_boton_guardar"
        android:layout_marginTop="16dp" />

</LinearLayout>