<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tituloIntrumentosFragmentRegistro"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="@string/instrumentos_registro_titulo"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instrumentos_registro_spinner_tipo"
                android:textSize="20sp"
                android:paddingLeft="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/inputMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/instrumentos_registro_input_marca" />

            <EditText
                android:id="@+id/inputModelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/instrumentos_registro_input_modelo" />

            <EditText
                android:id="@+id/inputNumeroDeSerie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/instrumentos_registro_input_num_serie"
                android:inputType="number" />

            <EditText
                android:id="@+id/inputDNIMusico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/instrumentos_registro_input_dni_musico"
                android:inputType="number"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/botonRegistrarInstrumento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instrumentos_registro_boton_guardar"
        android:layout_marginTop="16dp" />

</LinearLayout>